---
import '../styles/global.css'

interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
}

const { title, description, canonicalUrl } = Astro.props;
const siteUrl = 'https://mquarmoc.github.io';
const basePath = '/toolscout';
const canonical = canonicalUrl || new URL(Astro.url.pathname, siteUrl).href;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} | ToolScout</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonical} />
  
  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="article" />
  <meta property="og:url" content={canonical} />
  <meta property="og:site_name" content="ToolScout" />
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href={`${basePath}/favicon.svg`} />
</head>
<body class="bg-white text-slate-800 antialiased">
  <header class="border-b border-slate-200 bg-white/80 backdrop-blur-sm sticky top-0 z-50">
    <nav class="max-w-4xl mx-auto px-4 py-4 flex items-center justify-between">
      <a href={basePath + "/"} class="text-xl font-bold text-indigo-600 hover:text-indigo-700 transition-colors">
        üîç ToolScout
      </a>
      <div class="flex gap-6 text-sm text-slate-600">
        <a href={basePath + "/comparisons"} class="hover:text-indigo-600 transition-colors">Comparisons</a>
        <a href={basePath + "/reviews"} class="hover:text-indigo-600 transition-colors">Reviews</a>
        <a href={basePath + "/guides"} class="hover:text-indigo-600 transition-colors">Guides</a>
      </div>
    </nav>
  </header>

  <main class="max-w-4xl mx-auto px-4 py-8">
    <slot />
  </main>

  <footer class="border-t border-slate-200 mt-16">
    <div class="max-w-4xl mx-auto px-4 py-8 text-center text-sm text-slate-500">
      <p>¬© {new Date().getFullYear()} ToolScout. Independent reviews & comparisons.</p>
      <p class="mt-1">Some links are affiliate links. We may earn a commission at no extra cost to you.</p>
    </div>
  </footer>
</body>
</html>
