---
import Base from './Base.astro';

interface Props {
  title: string;
  description: string;
  date: string;
  updated?: string;
  author?: string;
  category: string;
}

const { title, description, date, updated, author = 'ToolScout Team', category } = Astro.props;
---

<Base title={title} description={description}>
  <article class="prose prose-slate prose-lg max-w-none">
    <div class="not-prose mb-8">
      <div class="flex items-center gap-2 text-sm text-slate-500 mb-2">
        <a href={`/toolscout/${category}`} class="text-indigo-600 hover:text-indigo-700 uppercase tracking-wide font-medium text-xs">
          {category}
        </a>
        <span>·</span>
        <time datetime={date}>{new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
        {updated && (
          <>
            <span>·</span>
            <span>Updated {new Date(updated).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
          </>
        )}
      </div>
      <h1 class="text-3xl md:text-4xl font-bold text-slate-900 leading-tight">{title}</h1>
      <p class="text-lg text-slate-600 mt-3">{description}</p>
    </div>
    
    <slot />

    <div class="not-prose mt-12 pt-8 border-t border-slate-200">
      <p class="text-sm text-slate-500">
        <strong>Disclosure:</strong> This article may contain affiliate links. If you purchase through these links, we earn a small commission at no extra cost to you. We only recommend tools we've personally tested.
      </p>
    </div>
  </article>
</Base>
